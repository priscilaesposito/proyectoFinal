{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp", "./lib/*",
                "-d", "./bin",
                "-sourcepath", "./src",
                "src/app/*.java",
                "src/dao/*.java", 
                "src/daoJDBC/*.java",
                "src/db/*.java",
                "src/enumerativo/*.java",
                "src/gestion/*.java",
                "src/model/*.java",
                "src/utilidades/*.java"
            ],
            "options": {
                "cwd": "${workspaceFolder}/projecto"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run-java",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", "./bin;./lib/*",
                "app.Main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/projecto"
            },
            "dependsOn": "compile-java",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}